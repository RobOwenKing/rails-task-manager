<div class="container">
  <h1>All tasks</h1>

  <ul>
  <% @tasks.each do |task| %>
    <li>
      <% if task.completed %>
        <i class="far fa-check-square"></i>
      <% else %>
        <i class="far fa-square"></i>
      <% end %>
      <%= link_to task.title, task_path(task) %> Â·
      <%= link_to '<i class="far fa-trash-alt"></i>'.html_safe, task_path(task),
        method: :delete,
        data: { confirm: "Confirm delete?" } %>
    </li>
  <% end %>
  </ul>

  <hr>

  <p><i class="fas fa-plus"></i><%= link_to "Add new task", new_task_path() %></p>
</div>
